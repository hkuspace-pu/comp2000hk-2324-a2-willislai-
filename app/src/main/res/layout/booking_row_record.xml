<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:padding="3dp"
    android:background="@drawable/booking_hist_record_bkg"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="85dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/booking_hist_item_bkg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bkHistDateIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:drawableStart="@drawable/outline_calendar_month_24" />

            <TextView
                android:id="@+id/bkHistDate"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Booking Date"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/booking_hist_item_bkg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bkHistMealIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:drawableStart="@drawable/outline_access_time_24" />

            <TextView
                android:id="@+id/bkHistMeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Meal"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/booking_hist_item_bkg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bkHistTableSizeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:drawableStart="@drawable/outline_people_alt_24" />

            <TextView
                android:id="@+id/bkHistTableSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Table Size"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="85dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/booking_hist_item_bkg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bkHistSeatAreaIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:drawableStart="@drawable/outline_chair_24" />

            <TextView
                android:id="@+id/bkHistSeatArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Seating Area"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>
